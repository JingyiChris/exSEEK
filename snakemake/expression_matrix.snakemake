def get_all_inputs(wildcards):
    available_inputs = dict(
        counts_by_biotype=expand('{output_dir}/counts_by_biotype/{count_method}/{sample_id}/{rna_type}',
            output_dir=output_dir, count_method=count_methods, sample_id=sample_ids, rna_type=rna_types),
        count_matrix=expand('{output_dir}/count_matrix/{count_method}.txt',
            output_dir=output_dir, count_method=count_methods)
    )
    enabled_inputs = list(available_inputs.keys())
    inputs = []
    for key, l in available_inputs.items():
        if key in enabled_inputs:
            inputs += l
    return inputs

